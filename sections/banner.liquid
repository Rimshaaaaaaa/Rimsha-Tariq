{% schema %}
{
    "name": "Banner",
    "settings":[
        { "type": "text", "id": "title", "label": "Banner Title", "default": "Find the ideal gift for your loved ones" },
        { "type": "text", "id": "subtitle", "label": "Banner subtitle", "default": "Shop the latest product now" },
        { "type": "text", "id": "button_label", "label": "Button label", "default": "Shop now" },
        { "type": "url", "id": "button_link", "label": "Button Link"},
        { "type": "text", "id": "footer_text", "label": "Footer Text", "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL" }
    ]
}
{% endschema %}

<section class="banner">
    <div class ="banner-content">
        <h1>{{ section.settings.title }}</h1>
        <p>{{ section.settings.subtitle }}<p> 
        <a href="{{ section.settings.button_link}}"  class="banner-btn">
        {{ section.settings.button_label }}
        </a>
    </div>
</section>
<footer class="custom-footer">
  <p>{{ section.settings.footer_text }}</p>
</footer>